# Playlizt Environment Configuration
# Copy this file to .env and fill in actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=docker
JAVA_OPTS=-Xms512m -Xmx1024m
TZ=Africa/Harare

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=playlizt-database
POSTGRES_PORT=5432
POSTGRES_DB=playlizt
POSTGRES_USER=playlizt_user
POSTGRES_PASSWORD=CHANGEME_secure_password_here

# =============================================================================
# SERVICE PORTS
# =============================================================================
EUREKA_PORT=4761
AUTH_SERVICE_PORT=4081
CONTENT_SERVICE_PORT=4082
PLAYBACK_SERVICE_PORT=4083
AI_SERVICE_PORT=4084
API_GATEWAY_PORT=4080

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret - Must be at least 256 bits (32 characters) for HS256
JWT_SECRET=CHANGEME_your_jwt_secret_key_minimum_256_bits_32_characters

# JWT Expiration (in milliseconds)
JWT_EXPIRATION_MS=3600000        # 1 hour
JWT_REFRESH_EXPIRATION_MS=86400000  # 24 hours

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Google Gemini API Key - Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=CHANGEME_your_gemini_api_key_here

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_FALLBACK_MODELS=gemini-1.5-flash,gemini-1.5-pro
GEMINI_MAX_TOKENS=2048
GEMINI_TEMPERATURE=0.7
GEMINI_RATE_LIMIT_RPM=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_PATH=/var/log/playlizt

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
PLAYLIZT_USER=playlizt
PLAYLIZT_GROUP=playlizt
PLAYLIZT_UID=1000
PLAYLIZT_GID=1000

# =============================================================================
# EUREKA CONFIGURATION
# =============================================================================
EUREKA_URL=http://eureka-service:4761/eureka/
