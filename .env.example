# Playlizt Environment Configuration
# Copy this file to .env and fill in actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=docker
JAVA_OPTS=-Xms512m -Xmx1024m
TZ=Africa/Harare

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
PLAYLIZT_DB_HOST=playlizt-database
PLAYLIZT_DB_PORT=4432
PLAYLIZT_DB_NAME=playlizt
PLAYLIZT_DB_USER=playlizt_user
PLAYLIZT_DB_PASSWORD=CHANGEME_secure_password_here

# =============================================================================
# SERVICE PORTS
# =============================================================================
PLAYLIZT_EUREKA_PORT=4761
PLAYLIZT_AUTH_PORT=4081
PLAYLIZT_CONTENT_API_PORT=4082
PLAYLIZT_PLAYBACK_PORT=4083
PLAYLIZT_CONTENT_PROCESSING_PORT=4084
PLAYLIZT_API_GATEWAY_PORT=4080

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret - Must be at least 256 bits (32 characters) for HS256
PLAYLIZT_JWT_SECRET=CHANGEME_your_jwt_secret_key_minimum_256_bits_32_characters

# JWT Expiration (in milliseconds)
PLAYLIZT_JWT_EXPIRATION_MS=3600000        # 1 hour
PLAYLIZT_JWT_REFRESH_EXPIRATION_MS=86400000  # 24 hours

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Google Gemini API Key - Get from https://makersuite.google.com/app/apikey
PLAYLIZT_GEMINI_API_KEY=CHANGEME_your_gemini_api_key_here

# Gemini Model Configuration
PLAYLIZT_GEMINI_MODEL=gemini-2.0-flash-exp
PLAYLIZT_GEMINI_FALLBACK_MODELS=gemini-1.5-flash,gemini-1.5-pro
PLAYLIZT_GEMINI_MAX_TOKENS=2048
PLAYLIZT_GEMINI_TEMPERATURE=0.7
PLAYLIZT_GEMINI_RATE_LIMIT_RPM=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
PLAYLIZT_LOG_PATH=/var/log/playlizt

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
PLAYLIZT_USER=playlizt
PLAYLIZT_GROUP=playlizt
PLAYLIZT_UID=1000
PLAYLIZT_GID=1000

# =============================================================================
# EUREKA CONFIGURATION
# =============================================================================
PLAYLIZT_EUREKA_URL=http://playlizt-eureka-service:4761/eureka/
